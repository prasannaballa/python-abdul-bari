
pass1 = input('enterpass')
pass2 = input('confirm password')

if pass1 == pass2:
    print('Yes They are Matching')
else:
    if pass1.casefold() == pass2.casefold():
        print('please check for the cases and try again')
    else:
        print('No They are not matching')

